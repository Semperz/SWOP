<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Fecha arriba -->
        <TextView
            android:id="@+id/text_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/2024"
            android:textColor="@color/brand_yellow_dark"
            android:textSize="14sp"
            android:fontFamily="@font/star_jedi"
            android:paddingBottom="6dp" />

        <!-- Produtos pedidos -->
        <TextView
            android:id="@+id/text_order_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Producto1 x2, Producto2 x1"
            android:textColor="@color/brand_yellow_dark"
            android:textSize="14sp"
            android:fontFamily="@font/star_jedi"
            android:paddingBottom="8dp" />

        <!-- Método pago -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_order_payment_method"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Tarjeta de crédito"
                android:textColor="@color/brand_yellow_dark"
                android:textSize="14sp"
                android:fontFamily="@font/star_jedi"
                android:gravity="start" />

            <TextView
                android:id="@+id/text_order_total"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="45,00 €"
                android:textColor="@color/brand_yellow_dark"
                android:textSize="14sp"
                android:fontFamily="@font/star_jedi"
                android:gravity="end" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>